        <fixedIngredientFilter>
            <li>
                <filter>
                    <categories>
                        <li>FoodRaw</li>
                    </categories>
                </filter>
                <count>2.5</count>
            </li>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <li>
                <filter>
                    <categories>
                        <li>FoodRaw</li>
                    </categories>
                </filter>
                <count>2.5</count>
            </li>
        </defaultIngredientFilter>

        <products>
            <SoupSimple>5</SoupSimple>
        </products>
        <workSkill>Cooking</workSkill>
        <recipeUsers>
            <li>CookingPot</li>
        </recipeUsers>
    </RecipeDef>

